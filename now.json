{
    "version": 2,
    "builds": [
        {
            "src": "next.config.js",
            "use": "@now/next"
        },
        {
            "src": "./server/index.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
                "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
            },
            "src": "/.*",
            "dest": "./server/index.js"
        },
        {
            "src": "/api/contact",
            "methods": ["POST"],
            "dest": "./server/index.js"
        }
    ],
    "env": {
        "EMAIL_KEY": "@email_key"
    }
}
